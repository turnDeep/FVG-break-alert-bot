# FVG Break Alert Bot 設定ファイル - S&P500版

# このファイルをコピーして設定を記入してください

# ===== 必須設定 =====

# Discord Bot Token

# Discord Developer Portal (https://discord.com/developers/applications) から取得

DISCORD_BOT_TOKEN=

# ===== Bot基本設定 =====

# アラート投稿チャンネル名（自動作成されます）

BOT_CHANNEL_NAME=fvg-break-alerts

# スキャン間隔（分）- S&P500全銘柄のため15分推奨

SCAN_INTERVAL=15

# ===== テクニカル設定 =====

# 移動平均期間（週足SMA、日足MA）

MA_PERIOD=200

# FVG（Fair Value Gap）設定

FVG_MIN_GAP_PERCENT=0.5    # 最小ギャップサイズ（%）
FVG_LOOKBACK_BARS=5        # FVG有効期間（本）

# レジスタンス検出設定

RESISTANCE_LOOKBACK=20     # 直近高値の検出期間（日）
BREAKOUT_THRESHOLD=1.005   # 突破判定の閾値（0.5%上）

# ===== リスク管理設定 =====

# ストップロス設定

STOP_LOSS_RATE=0.02        # FVG下限/レジスタンスからの下落率（2%）

# 利確目標設定

TARGET_PROFIT_RATE=0.05    # エントリーからの上昇率（5%）

# アラート設定

ALERT_COOLDOWN_HOURS=24    # 同一銘柄の再アラート防止期間（時間）
FVG_ALERT_EXPIRY=48        # FVGアラートの有効期限（時間）

# ===== 高度な設定（オプション）=====

# チャート設定

CHART_DISPLAY_DAYS=60      # チャート表示期間（日）
CHART_FVG_ZONES=3          # 表示するFVGゾーンの数

# バックテスト期間（日）

BACKTEST_DAYS=180

# 出来高フィルター（使用する場合）

# VOLUME_MULTIPLIER=1.5    # 通常の何倍の出来高か

# MA付近の判定範囲

MA_PROXIMITY_PERCENT=5     # 日足200MAからの距離（%）

# ===== デバッグ設定 =====

# デバッグモード（詳細ログ出力）

DEBUG_MODE=false

# ===== 将来の拡張用 =====

# データベースURL（履歴保存用）

# DATABASE_URL=sqlite:///fvg_break_bot.db

# Webhook URL（外部通知用）

# WEBHOOK_URL=

# API Keys for news/sentiment

# NEWS_API_KEY=

# TWITTER_API_KEY=

# AI分析用

# OPENAI_API_KEY=

# ANTHROPIC_API_KEY=
